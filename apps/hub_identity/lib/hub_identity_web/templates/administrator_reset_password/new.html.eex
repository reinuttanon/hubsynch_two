
  <h1>Forgot your password?</h1>

  <%= form_for :administrator, Routes.administrator_reset_password_path(@conn, :create), fn f -> %>
    <div class="field">
      <%= label f, :email, class: "label" %>
      <%= email_input f, :email, required: true, class: "input" %>
    </div>

    <div>
      <%= submit "Send instructions to reset password", class: "button is-link"  %>
    </div>
  <% end %>

  <p>
    <%= link "Log in", to: Routes.administrator_session_path(@conn, :new) %>
  </p>

