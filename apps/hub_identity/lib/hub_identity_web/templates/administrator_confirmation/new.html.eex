<h1>Resend confirmation instructions</h1>

<%= form_for :administrator, Routes.administrator_confirmation_path(@conn, :create), fn f -> %>

  <div class="form-group">
    <%= label f, :email %>
    <%= email_input f, :email, required: true %>
  </div>

  <div>
    <%= submit "Resend confirmation instructions", class: "btn btn-primary" %>
  </div>
<% end %>

<p>
  <%= link "Log in", to: Routes.administrator_session_path(@conn, :new) %>
</p>
